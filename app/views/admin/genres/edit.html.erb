<h1>ジャンル編集</h1>
  
<%= form_with model: @genre, url: admin_genre_path, method: :patch do |f| %>
  <div class="d-flex">
    <div class="form-group col">
      <b><%= f.label :name, 'ジャンル名' %></b>
    </div>
    <div class="form-group col">
      <%= f.text_field :name %>
    </div>
    <div class="form-group col">
      <%= f.submit '変更を保存', class:"btn btn-success" %>
    </div>
  </div>  
<% end %>