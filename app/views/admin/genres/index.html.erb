
<div class="container col-11">
  <h2 class="mt-5">ジャンル一覧・追加</h2>

  <div class="row d-flex justify-content-between ml-2 col-9">
    <%= form_with model: @genre_new, url: admin_genres_path, method: :post do |f| %>
    <div class="d-flex">
      <div class="form-group col">
        <b><%= f.label :name, 'ジャンル名' %></b>
      </div>
      <div class="form-group col">
        <%= f.text_field :name, placeholder:'ジャンル名' %>
      </div>
      <div class="form-group col">
        <%= f.submit '新規登録',class:"btn btn-success" %>
      </div>
    </div>
      <% end %>
  </div>

  <div class="col-4">
    <table class="table ml-2">
      <thead class="thead-light" >
        <tr>
          <th>ジャンル</th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        <% @genres.each do |genre| %>
        <tr>
          <td><%= genre.name %></td>
          <td><%= link_to '編集する', edit_admin_genre_path(genre.id), class:"btn btn-success" %></td>
        </tr>
        <% end %>
      </tbody>
    </table>
    <div class="row justify-content-center">
    </div>
  </div>
</div>