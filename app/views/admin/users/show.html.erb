<div class="container-fluid my-5">
  <div class="row">
    <div class="col-12">
      <h3><%= @user.name %>の投稿一覧</h3> 
      
      <div>
        <% @user_posts.each do |post| %>
          <div class="card mb-3">
            <div class="card-body">
              <h5 class="card-title"><%= post.title %></h5>
              <p class="card-text"><%= post.content %></p>
              <p class="card-text">ジャンル: <%= post.genre.name %></p>
              <p class="card-text">投稿日時: <%= post.created_at.strftime("%Y年%m月%d日 %H:%M:%S") %></p>
              <%= button_to "削除", admin_user_path(post), method: :delete, data: { confirm: "削除しますか？" }, class: "btn btn-danger" %>
            </div>
            <img src="<%= post.get_post_image(200,200) %>" class="card-img-bottom" alt="投稿画像">
          </div>
        <% end %>
      </div>
      
    </div>
  </div>
</div>