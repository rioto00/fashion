<header>
  <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
    <div class="container">
      <a class="navbar-brand m-2" href="/">
        <%= image_tag('logo4.png', style: "width: 170px; height: auto;", alt: "Logo") %>
      </a>
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="row" id="navbarNav">
        <ul class="navbar-nav ms-auto">
          
         <% if user_signed_in? %>
            <%= render partial: 'layouts/serach' %>
          <% end %>
          
          <% if admin_signed_in? %>
            <li class="nav-item">
                <%= link_to "Comments", admin_comments_path, class: "link mx-2" %> 
            </li>
            <li class="nav-item">

                <%= link_to "Users", admin_users_path, class: "link mx-2" %> 
            </li>
            <li class="nav-item">

                <%= link_to "Genres", admin_genres_path, class: "link mx-2" %> 
            </li>
            <li class="nav-item">

                <%= link_to "Log out", destroy_admin_session_path, method: :delete, class: "link mx-2" %> 
            </li>
          <% elsif user_signed_in? %>
            <% if user_signed_in? || admin_signed_in? %>
              <li class="nav-item text-center">
                <span class=" text-white">ようこそ、<%= current_user.name %>さん！</span>
              </li>
            <% end %>
            
            <% if user_signed_in? && !current_user.guest_user? %>
              <li class="nav-item text-center">
                <i class="fa-solid fa-caret-right mx-2" style="color:white;"></i>
                <%= link_to "マイページ", user_users_mypage_path, data: { "turbolinks" => false }, class: "link text-center" %> 
              </li>
            <% end %>
            
            <li class="nav-item text-center">
              <i class="fa-solid fa-caret-right mx-2" style= "color:white;" ></i>
                <%= link_to "ログアウト", destroy_user_session_path, method: :delete, class: "link text-center" %> 
            </li>
          <% else %>
            <li class="col mt-3">
              <i class="fa-solid fa-caret-right mr-3" style="color:white;"></i>
              <%= link_to "sign up", new_user_registration_path, class: "link" %>
            </li>
            <li class="col mt-3">
              <i class="fa-solid fa-caret-right mr-3" style="color:white;"></i>
              <%= link_to "Log in", new_user_session_path, class: "link" %>
            </li>
          <% end %>
          
        </ul>
      </div>
    </div>
  </nav>
</header>