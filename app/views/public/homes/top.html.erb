<div class="container my-5" style="position: relative" >
  
  <div class="row justify-content-center">
    <div class="col-12 col-md-12">
      
      <h1>投稿一覧</h1>
      
      <div class="row">
        <div class="col-md-3 one">
          <%= render partial: 'public/homes/genre', genres: @genres %>
        </div>
        
        <div class="col-md-9 offset-3">
          <div class="row">
            
          
            <% @posts.each do |post| %>
              <div class="col-4 my-2">
                <div class="card" style="width: 15rem;">
                  <div class="card-header">
                    <%= image_tag post.user.get_profile_image(40, 40), class: "img-fluid rounded-circle me-3" %>
                    <% if current_user %> <!-- ログインしている場合にリンクを表示 -->
                      <%= link_to post.user.name, post_path(post.id), class: "card-name" %>
                    <% else %> <!-- ログインしていない場合はリンクを表示しない -->
                      <span class="card-name"><%= post.user.name %></span>
                    <% end %>
                  </div>
                  <%= image_tag post.get_post_image(200,200) %>
                  <div class="card-body">
                    <p class="card-title"><%= post.title %></p>
                    <p class="card-text">投稿日時: <%= post.created_at.strftime("%Y-%m-%d %H:%M") %></p>
                  </div>
                </div>
              </div>
            <% end %>
            
          </div>
        </div>
        
      </div>

    </div>
  </div>
</div>