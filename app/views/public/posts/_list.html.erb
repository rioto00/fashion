<div class="container my-5">
  <div class="row justify-content-center">
    <div class="col-12 col-md-8">
      
      <h3>過去の投稿</h3>
      
      <% if @posts.any? %>
        <div class="row row-cols-1 row-cols-md-3 g-4">
          <% @posts.each do |post| %>
            <div class="col">
              <div class="card">
                <%= image_tag post.get_post_image(200,200), class: "card-img-top" %>
                <div class="card-body">
                  <h5 class="card-title"><%= link_to post.user.name, post_path(post.id) %></h5>
                  <p class="card-text"><%= post.content %></p>
                </div>
              </div>
            </div>
          <% end %>
        </div>
      <% else %>
        <p class="text-center mt-3">投稿がありません</p>
      <% end %>
      
    </div>
  </div>
</div>