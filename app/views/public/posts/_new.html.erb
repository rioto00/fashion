<div class="container my-5">
  <div class="row justify-content-center">
    <div class="col-12 col-md-8">
      
      <h3>投稿</h3>
      
      <%= form_with model: @post_new, url: posts_path, method: :post do |form| %>
        <div class="row">
          <div class="col-md-4">
            <div class="d-flex justify-content-center flex-column align-items-center">
              <%= image_tag @user.posts.first.get_post_image(200, 200), class: "img-fluid rounded mb-3" if @user.posts.any? %>
              <%= form.file_field :post_image, accept: "image/*"%>
              
            </div>
          </div>
          
          <div class="col-md-8">
            <div class="row">
              <div class="col-3">
                <%= image_tag current_user.posts.first.get_post_image1(200, 200), class: "img-fluid rounded mb-3" if current_user.posts.any? %>
                <p><%= form.file_field :post_image1, accept: "image/*" %></p>
                <p><%= form.collection_select :genre_id, Genre.all, :id, :name, { prompt: "選択してください" }, { class: "form-control" } %></p>
              </div>
              <div class="col-3">
                <%= image_tag current_user.posts.first.get_post_image2(200, 200), class: "img-fluid rounded mb-3" if current_user.posts.any? %>
                <p><%= form.file_field :post_image2, accept: "image/*" %></p>
                <p><%= form.collection_select :genre_id, Genre.all, :id, :name, { prompt: "選択してください" }, { class: "form-control" } %></p>
              </div>
              <div class="col-3">
                <%= image_tag current_user.posts.first.get_post_image3(200, 200), class: "img-fluid rounded mb-3" if current_user.posts.any? %>
                <p><%= form.file_field :post_image3, accept: "image/*" %></p>
                <p><%= form.collection_select :genre_id, Genre.all, :id, :name, { prompt: "選択してください" }, { class: "form-control" } %></p>
              </div>
              <div class="col-3">
                <%= image_tag current_user.posts.first.get_post_image4(200, 200), class: "img-fluid rounded mb-3" if current_user.posts.any? %>
                <p><%= form.file_field :post_image4, accept: "image/*" %></p>
                <p><%= form.collection_select :genre_id, Genre.all, :id, :name, { prompt: "選択してください" }, { class: "form-control" } %></p>
              </div>
            </div>
            
            <div class="row">
              <div class="col-md-9">
                <p>
                  <label for="title" class="form-label">title</label>
                  <%= form.text_field :title, id: "title", class: "form-control" %> 
                </p>
              </div>
              
              <div class="col-md-12">
                <p>
                  <label for="content" class="form-label">内容</label>
                  <%= form.text_area :content, id: "content", class: "form-control", rows: 4, cols: 50 %>
                </p>
              </div>
            </div>
            
            <div class="row">
              <div class="col-md-12 mt-1">
                <%= form.submit "投稿", class: "btn btn-primary" %>
              </div>
            </div>
          </div>
        </div>
      <% end %>
      
    </div>
  </div>
</div>