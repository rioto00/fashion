<div class="container my-5">
  <div class="row justify-content-center">
    <div class="col-12 col-md-8">
      
      <h3>投稿詳細</h3>
      
      <div class="container">
        <div class="row">
          <div class="col-4">
            <% @post.post_images.each do |image| %>
              <%= image_tag image.variant(resize: "150x150"), class: "img-fluid rounded mb-3" %>
            <% end %>
            
            <!--リンク予定-->
            <div><strong><%= @post.genre.name %></strong></div>
            <div><%= @post.content %></div>
          </div>
          
          
          <div class="col-7 offset-md-1"> 
            <%= image_tag @post.get_post_image(600, 600), class: "img-fluid rounded mb-3" %>
            <div><strong><%= @post.title %></strong></div>
            <div class="d-flex align-items-center mb-3 mt-5">
              <% if @post.user.present? %>
                <%= image_tag @post.user.get_profile_image(40, 40), class: "img-fluid rounded-circle me-3" %>
                <h5><%= @post.user.name %></h5>
                <div class="ms-3 offset-md-3">
                  <div><strong>follows</strong>: <%= link_to @post.user.following.count, relationships_followings_path(@post.user) %></div>
                  <div><strong>followers</strong>: <%= link_to @post.user.followers.count, relationships_followers_path(@post.user) %></div>
                  <div><strong>favorites</strong>: <%= render "public/favorites/btn", post: @post_new %></div>
                </div>
              <% end %>
            </div>
            <div>コメント数： <%= @post.comments.count %></div>
            <%= render "public/comments/form", post: @post, comment: @comment %>
            <%= render "public/comments/index", post: @post %>
          </div>
        </div>
      </div>
      
    </div>
  </div>
</div>