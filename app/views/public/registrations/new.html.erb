<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <div class="form">
        <h2 class="mt-5 mb-4">新規会員登録</h2>
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <%= render "public/shared/error_messages", resource: resource %>
        
          <div class="mb-3">
            <%= f.label :ユーザーネーム, class: "form-label" %><br />
            <%= f.text_field :name, autofocus: true, autocomplete: "name", placeholder: "名前", class: "form-control" %>
          </div>
        
          <div class="mb-3">
            <%= f.label :メールアドレス, class: "form-label" %><br />
            <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "△△.@△△.com", class: "form-control" %>
          </div>
        
          <div class="mb-3">
            <%= f.label :パスワード, class: "form-label" %><br />
            <%= f.password_field :password, autocomplete: "new-password", placeholder: "6文字以上", class: "form-control" %>
          </div>
        
          <div class="mb-3">
            <%= f.label :パスワードの確認, class: "form-label" %><br />
            <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: "6文字以上", class: "form-control" %>
          </div>
        
          <div class="mb-3">
            <%= f.submit "新規登録", class: "btn btn-primary btn-block" %>
          </div>
        <% end %>
        
        <h3 class="mt-5 mb-2">既に登録済みの方</h3>
        <p><%= link_to "こちら", new_user_session_path %>からログインしてください。</p>
      </div>
    </div>
  </div>
</div>