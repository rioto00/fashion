<div class="container">
  <div class="row">
    <div class="col-4">
      <div><strong><%= link_to @user.followings.count, followings_user_relationships_path(@user), remote: true, data: {"turbolinks" => false} %></strong>:フォロー</div>
    </div>
    <div class="col-md-4">
      <div><strong><%= link_to @user.followers.count, followers_user_relationships_path(@user), remote: true, data: {"turbolinks" => false} %></strong>:フォロワー</div>
    </div>

    <div class="col-md-4 d-flex justify-content-start">
      <% unless current_user == user %>
        <% if current_user.following?(user) %>
          <%= link_to "フォロー外す", user_relationships_path(user), method: :delete, remote: true, data: {"turbolinks" => false}, class: "btn btn-danger me-2" %>
        <% else %>
          <%= link_to "フォローする", user_relationships_path(user), method: :post, remote: true, data: {"turbolinks" => false}, class: "btn btn-success me-2" %>
        <% end %>
      <% end %>
    </div>
  </div>
</div>