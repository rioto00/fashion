<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-12 col-md-8">

      <h2>フォロー</h2>
      
      <div class="row">
        <% @user.followings.each do |followings| %>
          <div class="col-12 col-md-6">
            <div class="mb-4">
              <%= image_tag @user.get_profile_image(40, 40), class: "img-fluid rounded-circle" %>
              <%= link_to followings.name, user_path(followings) %>
              <p><%= followings.gender %></p> 
              <p><%= followings.introduction %></p> 
              <% if followings.followers.include?(@user) %> 
                <p>フォローされています</p>
              <% else %>
                <p>フォローされていません</p>
              <% end %>
            </div>
          </div>
        <% end %>
      </div>
      
    </div>
  </div>
</div>