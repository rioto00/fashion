<div class="container mt-5">
  <style>
    /* CSSスタイル */
    .follower-container {
      display: flex;
      align-items: center;
      padding: 10px;
      border-bottom: 1px solid #e1e8ed;
    }

    .follower-image {
      width: 50px;
      height: 50px;
      border-radius: 50%;
      margin-right: 15px;
    }

    .follower-info {
      flex: 1;
    }

    .follower-name {
      font-weight: bold;
      color: #1da1f2;
      text-decoration: none;
    }

    .follower-gender {
      color: #657786;
    }

    .follower-introduction {
      color: #14171a;
    }

    .follower-follow-status {
      color: #657786;
      margin-top: 5px;
      text-align: right;
    }

    .followed {
      color: #1da1f2;
    }
  </style>
  <div class="row justify-content-center">
    <div class="col-12 col-md-8">

      <h3>フォロー</h3>
      
      <% @user.followings.each do |followings| %>
      <div class="follower-container">
        <%= image_tag @user.get_profile_image(50, 50), class: "follower-image" %>
        <div class="follower-info">
          <%= link_to followings.name, user_path(followings), class: "follower-name" %></p>
          <p class="follower-gender"><%= followings.gender %></p> 
          <p class="follower-introduction"><%= followings.introduction %></p> 
        </div>
        <p class="follower-follow-status">
          <% if followings.followers.include?(@user) %> 
            <span class="followed">フォローされています</span>
          <% else %>
            フォローされていません
          <% end %>
        </p>
      </div>
      <% end %>
      
    </div>
  </div>
</div>