

<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <div class="form">
        <h2 class="mt-5 mb-4">ログイン</h2>
        <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: {class: "mt-3"}) do |f| %>
          <div class="mb-3">
            <%= f.label :メールアドレス, class: "form-label" %>
            <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "△△.@△△.com", class: "form-control" %>
          </div>
          <div class="mb-3">
            <%= f.label :パスワード, class: "form-label" %>
            <%= f.password_field :password, autocomplete: "current-password", placeholder: "6文字以上", class: "form-control" %>
          </div>
          <div class="mb-3">
            <%= f.submit "ログイン", class: "btn btn-primary btn-block" %>
          </div>
        <% end %>
        <h3 class="mt-5 mb-2">会員登録がお済みでない方</h3>
        <p><strong><%= link_to "こちら", new_user_registration_path %></strong>から新規登録を行ってください。</p>
      </div>
    </div>
  </div>
</div>